    <link rel="stylesheet" href="assets/css/reset.css" />
    <link rel="stylesheet" href="assets/css/form.css">
</head>

<body>
    <div class="form">
        <h1 class="title">Cadastro de Locais</h1>
        <form action="salvarLocais" method="post">
            <input type="hidden" name="ID" id="ID" value="<%= (locais.length > 0 ? locais[0].ID: '') %>">

            <div class="input-container ic1">
                <input class="input" type="text" name="NOME" id="NOME"
                    value="<%= (locais.length > 0 ? locais[0].NOME:'') %>" size="15" placeholder=" ">
                    <div class="cut"></div>
                <label class="placeholder" for="NOME">Nome:</label>
            </div>

            <div class="input-container ic2">
                <input class="input" type="text" name="ENDERECO" id="ENDERECO"
                value="<%= (locais.length > 0 ? locais[0].ENDERECO:'') %>" size="15" placeholder=" ">
                <div class="cut"></div>
                <label class="placeholder" for="ENDERECO">Endere√ßo:</label>
            </div>

            <input class="submit" type="submit" name="acao" value="Atualizar">
        </form>
    </div>

</body>


</html>